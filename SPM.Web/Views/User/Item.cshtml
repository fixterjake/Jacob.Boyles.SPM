@model Item

@{
    Layout = "UserLayout";
    ViewData["Title"] = $"Item - {Model.Name}";
}


<div class="container secondary rounded box-shadow border border-dark text-white"
     style="margin-top: 20px; margin-bottom: 20px; padding-top: 20px; padding-bottom: 20px;">
    <h3 class="text-center" style="padding-bottom: 20px;">
        Sprint Dashboard
    </h3>
    @if (User.IsInRole("Maintainer") || User.IsInRole("Administrator"))
    {
        <div class="container text-center justify-content-center border-top border-light">
            <br />
            <a class="btn btn-primary" asp-controller="User" asp-action="CreateTask" asp-route-id="@Model.Id">Create Task</a>
        </div>
    }
</div>

<br />

<div class="row">
    <div class="col-sm">
        <div class="container secondary rounded box-shadow border border-dark text-white"
             style="margin-top: 20px; margin-bottom: 20px; padding-top: 20px; padding-bottom: 20px;">
            <h3 class="text-center">
                Tasks
            </h3>
        </div>
        <div class="row">
            @if (ViewBag.Tasks.Count > 0)
            {
                <div class="container secondary rounded box-shadow border border-dark text-white">
                    <table class="table table-responsive-sm">
                        <tbody>
                            @foreach (var task in ViewBag.Tasks)
                            {
                                <tr class="text-white text-center">
                                    <td>@task.Name</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#task-modal-@task.Id">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="card secondary" style="width: 18rem;">
                    <div class="card-body text-center text-white">
                        <h5 class="card-title">No Tasks Found</h5>
                        <p class="card-text">
                            If you believe this is an error please contact your site administrator.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-sm-4">
        <div class="container secondary rounded box-shadow border border-dark text-white"
             style="margin-top: 20px; margin-bottom: 20px; padding-top: 20px; padding-bottom: 20px;">
            <h3 class="text-center border-bottom border-light" style="padding-bottom: 20px;">
                Item Information
            </h3>
            <table class="table table-borderless table-responsive-sm text-white">
                <tbody>
                    <tr>
                        <td>Pending Tasks</td>
                        <td>@ViewBag.PendingTasks</td>
                    </tr>
                    <tr>
                        <td>In Progress Tasks</td>
                        <td>@ViewBag.InProgressTasks</td>
                    </tr>
                    <tr>
                        <td>Blocked Tasks</td>
                        <td>@ViewBag.BlockedTasks</td>
                    </tr>
                    <tr>
                        <td>Completed Tasks</td>
                        <td>@ViewBag.CompletedTasks</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@foreach (var task in ViewBag.Tasks)
{
    <div class="modal fade" id="task-modal-@task.Id" tabindex="-1" aria-labelledby="task-modal-@task.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="task-modal-@task.Id">@task.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @task.Description
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}