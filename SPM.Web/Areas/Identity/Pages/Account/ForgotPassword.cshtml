@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container secondary rounded box-shadow text-center border border-dark text-white"
     style="margin-bottom: 100px; padding-top: 20px; padding-bottom: 20px;">
    <h3 class="border-bottom border-white" style="padding-bottom: 20px;">
        <i class="fas fa-question-circle"></i> Forgot Password
    </h3>
    <br/>
    <h4>
        Enter your email.
    </h4>
    <br/>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
