@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container secondary rounded box-shadow text-center border border-dark text-dark"
     style="margin-bottom: 100px; padding-top: 20px; padding-bottom: 20px;">
    <h3 class="border-bottom border-white" style="padding-bottom: 20px;">
        <i class="fas fa-sign-in-alt"></i> Login
    </h3>
    <br/>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm">
            <section>
                <form id="account" method="post">
                    <h4>
                        Use a local account to log in.
                    </h4>
                    <br/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <div class="row text-center">
                            <div class="col-sm">
                                <p>
                                    <a class="text-white" id="forgot-password" asp-page="./ForgotPassword">
                                        <i class="fas fa-question-circle"></i> Forgot your password?
                                    </a>
                                </p>
                            </div>
                            <div class="col-sm">
                                <p>
                                    <a class="text-white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                        <i class="fas fa-plus-square"></i> Register as a new user
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
